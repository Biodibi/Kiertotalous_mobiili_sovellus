<resources>
    <style name="Theme.Kiertotalous.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/green</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_nature</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.Kiertotalous.NoActionBar</item>
    </style>
    <style name="Theme.Kiertotalous.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:listDivider">@drawable/divider_gray</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:colorAccent">@color/green</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="HintTextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
    </style>
</resources>